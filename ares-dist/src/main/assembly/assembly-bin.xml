<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>../</directory>

            <excludes>
                <exclude>**/target/**</exclude>
                <exclude>**/.classpath</exclude>
                <exclude>**/.project</exclude>
                <exclude>**/.settings/**</exclude>
                <exclude>lib/**</exclude>
            </excludes>

            <includes>
                <include>README.md</include>
                <include>plugins/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>../config</directory>
            <outputDirectory>/config</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../ares-starter/ares-spark2-starter/src/main/bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>../ares-starter/ares-spark3-starter/src/main/bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>../ares-starter/ares-spark-embedded-starter/src/main/bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>../ares-admin/ares-web/src/main/bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>

        <fileSet>
            <directory>../ares-starter/ares-spark2-starter/target/</directory>
            <includes>
                <include>ares-spark2-starter*.jar</include>
            </includes>
            <outputDirectory>/starter</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../ares-starter/ares-spark3-starter/target/</directory>
            <includes>
                <include>ares-spark3-starter*.jar</include>
            </includes>
            <outputDirectory>/starter</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../ares-starter/ares-spark-embedded-starter/target/</directory>
            <includes>
                <include>ares-spark-embedded-starter*.jar</include>
            </includes>
            <outputDirectory>/starter</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../ares-admin/ares-web/target/</directory>
            <includes>
                <include>ares-admin-starter*.jar</include>
            </includes>
            <outputDirectory>/starter</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../ares-shade/ares-hadoop3/target/</directory>
            <includes>
                <include>ares-hadoop3.jar</include>
            </includes>
            <outputDirectory>/thirdparty/hadoop</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../ares-shade/ares-hive2/target/lib</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>/thirdparty/hive</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <unpack>false</unpack>
            <includes>
                <include>com.github.ares:connector-*:jar</include>
            </includes>
            <outputDirectory>/connectors</outputDirectory>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <unpack>false</unpack>
            <includes>
                <include>com.mysql:mysql-connector-j:jar</include>
                <include>org.postgresql:postgresql:jar</include>
                <include>com.oracle.database.jdbc:ojdbc8:jar</include>
                <include>com.microsoft.sqlserver:mssql-jdbc:jar</include>
            </includes>
            <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
            <outputDirectory>/lib</outputDirectory>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <unpack>false</unpack>
            <outputDirectory>/starter/logging</outputDirectory>
            <includes>
                <include>org.slf4j:slf4j-api:jar</include>
                <include>org.slf4j:jcl-over-slf4j:jar</include>
                <include>org.apache.logging.log4j:log4j-api:jar</include>
                <include>org.apache.logging.log4j:log4j-core:jar</include>
                <include>org.apache.logging.log4j:log4j-slf4j-impl:jar</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>